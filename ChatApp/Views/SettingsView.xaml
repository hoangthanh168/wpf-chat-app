<UserControl
    x:Class="ChatApp.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter Server IP Address:" />
            <TextBox
                Width="200"
                HorizontalAlignment="Left"
                Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Margin="0,10,0,0" Text="Enter Server Port:" />
            <TextBox
                Width="200"
                HorizontalAlignment="Left"
                Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Width="100"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                Command="{Binding ConnectCommand}"
                Content="Connect" />

            <TextBlock Margin="0,10,0,0" Text="{Binding ConnectionStatus}" />

            <!--  New Logout Button  -->
            <Button
                Width="100"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                Command="{Binding LogoutCommand}"
                Content="Logout" />
        </StackPanel>
    </Grid>
</UserControl>
