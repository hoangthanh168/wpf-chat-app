<Page
    x:Class="ChatApp.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SettingsPage">

    <Grid>
        <StackPanel>
            <TextBlock
                Margin="20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Settings" />

            <TextBlock Margin="10" FontSize="16">Notifications</TextBlock>
            <CheckBox
                Margin="10"
                Content="Enable Notifications"
                IsChecked="{Binding EnableNotifications}" />

            <TextBlock Margin="10" FontSize="16">Chat Theme</TextBlock>
            <ComboBox Margin="10" SelectedItem="{Binding SelectedTheme}">
                <ComboBoxItem>Light</ComboBoxItem>
                <ComboBoxItem>Dark</ComboBoxItem>
            </ComboBox>

            <TextBlock Margin="10" FontSize="16">Language</TextBlock>
            <ComboBox Margin="10" SelectedItem="{Binding SelectedLanguage}">
                <ComboBoxItem>English</ComboBoxItem>
                <ComboBoxItem>French</ComboBoxItem>
                <ComboBoxItem>Spanish</ComboBoxItem>
            </ComboBox>

            <Button
                Margin="20"
                HorizontalAlignment="Right"
                Command="{Binding SaveCommand}"
                Content="Save" />
        </StackPanel>
    </Grid>
</Page>
